{
  "name": "graphql-api",
  "version": "0.0.1",
  "private": true,
  "author": "Marco Schaule",
  "description": "A simple GraphQL-MongoDB API.",
  "main": "server.js",
  "devPort": 4000,
  "port": 80,
  "scripts": {
    "clear": "rimraf ./dist",
    "copy": "gulp copy",
    "build": "tsc",
    "watch": "tsc --watch",
    "prebuild": "npm run clear && npm run copy",
    "prewatch": "npm run clear && npm run copy",
    "start": "parallelshell 'npm run start:mongo' 'npm run start:api'",
    "start:mongo": "mongod --dbpath ./data/db",
    "start:api": "NODE_ENV=development parallelshell 'npm run watch' 'nodemon ./dist/server.js'"
  },
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/express": "^4.0.36",
    "@types/express-graphql": "^0.0.33",
    "@types/graphql": "^0.9.2",
    "@types/js-yaml": "^3.5.31",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.3",
    "gulp": "^3.9.1",
    "js-yaml": "^3.8.4",
    "nodemon": "^1.11.0",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.1",
    "typescript": "^2.3.4",
    "watch": "^1.0.2"
  }
}
